{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:base',
    ':semanticCommitTypeAll(chore)',
    ':preserveSemverRanges',
    'github>whitesource/merge-confidence:beta',
    "github>aquaproj/aqua-renovate-config#1.7.0" // renovate: depName=aquaproj/aqua-renovate-config
  ],
  repositories: [
    'scottames/dots'
  ],
  automergeStrategy: 'squash',
  dependencyDashboard: true,
  labels: [
    'dependencies'
  ],
  onboarding: false,
  onboardingPrTitle: 'chore(deps): onboard with renovate',
  platform: "github",
  platformAutomerge: true,
  pruneStaleBranches: true,
  rebaseWhen: 'behind-base-branch',
  schedule: 'after 4pm on thursday',
  semanticCommitScope: 'deps',
  semanticCommitType: 'chore',
  semanticCommits: 'enabled',
  postUpdateOptions: [
    'gomodTidy',
    'gomodUpdateImportPaths'
  ],
  gomod: {
    enabled: true,
    commitMessageTopic: '‚á° golang module {{depName}}'
  },
  docker: {
    enabled: true,
    commitMessageTopic: '‚á° docker üê≥ {{depName}}'
  },
  vulnerabilityAlerts: {
    enabled: true,
    labels: [
      'security'
    ]
  },
  terraform: {
    commitMessageTopic: '‚á° terraform {{depName}}',
    enabled: true
  },
  "regexManagers": [
    {
      "fileMatch": [
        "\\.chezmoiexternal\\.toml(?:\\.tmpl)?$"
      ],
      "matchStrings": [
        "# renovate: depName=(?<depName>.*) datasource=(?<datasource>.*)\\n.*?ersion := \"(?<currentValue>.+)\\b\""
      ]
    },
    {
      "fileMatch": [
        "\\.chezmoiscripts\\/.+\\.sh(?:\\.tmpl)?$"
      ],
      "matchStrings": [
        "# renovate: depName=(?<depName>.*) datasource=(?<datasource>.*)\\n.*?[vV][eE][rR][sS][iI][oO][nN]=(?<currentValue>.+)\\b"
      ],
    },
  ],
  packageRules: [
    {
      matchFiles: [
        'magefiles'
      ],
      groupName: 'mage',
      commitMessageTopic: '‚á° mage {{depName}}'
    },
    {
      matchFiles: [
        '.github'
      ],
      groupName: 'github-actions',
      automerge: true,
      commitMessageTopic: '‚á° github actions {{depName}}',
      matchUpdateTypes: ['minor', 'patch']
    },
    {
      matchFiles: [
        'home/aqua.yaml',
        'home/private_dot_config/aquaproj-aqua/private_policy.yaml',
        'home/private_dot_config/aquaproj-aqua/registry.yaml',
        'home\\/\\.chezmoiscripts\\/.+aqua\\.sh(?:\\.tmpl)?$'
      ],
      groupName: 'aqua',
      automerge: true,
      commitMessageTopic: '‚á° aqua {{depName}}',
      matchUpdateTypes: ['minor', 'patch']
    },
    {
      matchFiles: [
        'home/.chezmoiexternal.toml.tmpl',
        'home/bin/executable_flyway.tmpl'
      ],
      groupName: 'chezmoiexternal',
      automerge: true,
      commitMessageTopic: '‚á° chezmoiexternal {{depName}}',
      matchUpdateTypes: ['minor', 'patch']
    }
  ]
}
