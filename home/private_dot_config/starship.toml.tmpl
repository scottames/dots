palette = "catppuccin_mocha"

format = """
$username\
$hostname\
$directory\
$git_branch\
$git_state\
$git_status\
${custom.containerenv}\
$kubernetes\
$python\
$aws\
$gcloud\
$shlvl\
$cmd_duration\
$line_break\
$character"""

command_timeout = 1000

[directory]
truncation_length = 4
style = "bold #cad0f2"

[shlvl]
disabled = false
format = " [⇣${shlvl}]($style)"
style = "bright-black"
{{ if lookPath "distrobox-host-exec" -}}
threshold = 6
{{- else -}}
threshold = 3
{{- end }}

[character]
success_symbol = "[❯](#6d6f83)"
error_symbol = "[](red)"
vimcmd_symbol = "[  ](green)"

[git_branch]
format = "[](bright-black)[ $branch]($style)"
style = "bright-black"

[git_status]
format = "[ $conflicted$stashed$staged$deleted$renamed$modified$untracked]($style)[ ]($style)[ $ahead_behind]($style) "
style = "bright-black"
conflicted = "="
ahead = "⇡${count}"
behind = "⇣${count} "
diverged = "⇕⇡${ahead_count}⇣${behind_count}"
modified = "!"
untracked = "?"
stashed = "󰏖"
staged = "+"
renamed = "»"
deleted = "x"
up_to_date = "󰄬"

[git_state]
format = '\([$state( $progress_current/$progress_total)]($style)\) '
rebase = "REBASING"
revert = "REVERTING"
style = "yellow"
merge = "MERGING"
cherry_pick = "CHERRY-PICKING"
bisect = "BISECTING"
am = "AM"
am_or_rebase = "AM/REBASE"

[cmd_duration]
format = "[ $duration]($style) "
style = "pink"
min_time = 3_000
show_notifications = false
min_time_to_notify = 45_000

[python]
format = "[  $virtualenv]($style) "
style = "bright-black"

[kubernetes]
symbol = '☸ '
disabled = false
# detect_files = ['Dockerfile']
# format = '[$context(\[$namespace\])]($style) '
format = '[$symbol$context( \($namespace\))]($style) '
# style = "bright-black"

[custom.containerenv]
description = "The activated distrobox container"
command = """
grep -oP 'name="\\K[^"]+' /var/run/.containerenv
"""
when = "is_container"
style = "italic bright-black"
format = "[  $output]($style) "
disabled = false

[gcloud]
format = '[$symbol$active(\($region\))]($style) '
symbol = "☁️ "
detect_env_vars = [
  "CLOUDSDK_ACTIVE_CONFIG_NAME",
  "GCLOUD_PROJECT",
  "CLOUDSDK_CORE_PROJECT",
]

[aws]
format = '[$symbol($profile )(\($region\) )(\[$duration\] )]($style)'
style = "bold yellow"
symbol = "☁️ "
expiration_symbol = "[](red)"

