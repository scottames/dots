{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "fileSuggestion": {
    "type": "command",
    "command": "{{ .chezmoi.homeDir }}/.claude/scripts/file-suggestion.sh"
  },
  "env": {
    "DISABLE_AUTOUPDATER": "1"
  },
  "permissions": {
    "allow": [
      "Bash(/bin/ls:*)",
      "Bash(/usr/bin/ls:*)",
      "Bash(cargo build:*)",
      "Bash(cargo check:*)",
      "Bash(cargo doc:*)",
      "Bash(cargo info:*)",
      "Bash(cargo run:*)",
      "Bash(cargo test:*)",
      "Bash(git mv:*)",
      "Bash(git show:*)",
      "Bash(go build:*)",
      "Bash(go mod tidy:*)",
      "Bash(go list:*)",
      "Bash(go run:*)",
      "Bash(go test:*)",
      "Bash(grep:*)",
      "Bash(command grep:*)",
      "Bash(command ls:*)",
      "Bash(ls:*)",
      "Bash(thts sync:*)",
      "Bash(tree:*)",
      "Bash(trunk check:*)",
      "Bash(trunk fmt:*)",
      "Bash(wc:*)",
      "Read(~/.config/agents/*.md)",
      "Read(~/.config/agents/*/*.md)",
      "Read(thoughts/*)",
      "WebFetch(domain:crates.io)",
      "WebFetch(domain:docs.renovatebot.com)",
      "WebFetch(domain:docs.rs)",
      "WebFetch(domain:github.com)",
      "WebSearch"
    ]
  },
{{- $thtsStart := joinPath .chezmoi.homeDir ".claude/hooks/thts-session-start.sh" -}}
{{- $thtsPrompt := joinPath .chezmoi.homeDir ".claude/hooks/thts-prompt-check.sh" -}}
  "hooks": {
    "SessionStart": [
{{- if stat $thtsStart }}
      {"hooks": [{"type": "command", "command": "{{ $thtsStart }}"}]}
{{- end }}
    ],
    "UserPromptSubmit": [
{{- if stat $thtsPrompt }}
      {"hooks": [{"type": "command", "command": "{{ $thtsPrompt }}"}]}
{{- end }}
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "{{ .chezmoi.homeDir }}/.claude/scripts/statusline.sh"
  },
  "enabledPlugins": {
    "superpowers@superpowers-dev": true,
    "superpowers@superpowers-marketplace": true
  },
  "alwaysThinkingEnabled": true,
  "feedbackSurveyState": {
    "lastShownTime": 1754077213482
  },
  "preferences": {
    "autoSave": true,
    "theme": "dark"
  }
}
