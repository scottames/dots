{{- $name           := "Scott Ames" -}}
{{- $email          := "scott@ames.sh" -}}
{{- $githubUser     := "scottames" -}}
{{- $fontMonospace  := "FiraCode Nerd Font Mono" -}}
{{- $chassis        := ""          -}}
{{- $gpu            := ""          -}}
{{- $isContainer    := false       -}}
{{- $isDistroBox    := false       -}}
{{- $isUblue        := false       -}}
{{- $desktopSession := env "DESKTOP_SESSION" -}}
{{- $hourDark       := 24 -}}
{{- $hourLight      := 24 -}}
{{- $osVariant      := "" -}}
{{- $ublueImageInfo := "" -}}
{{- $dotsStr        := "dots" -}}

{{- $loginSession     := 0 -}}
{{- $loginSessionType := "" -}}

{{- $useGitWorktrees := true -}}
{{- if $useGitWorktrees -}}
{{-   $dotsStr = "dots/main" -}}
{{- end -}}

{{- $gravatarID := trim (
output "sh" "-c" "printf 'scott@ames.sh' | md5sum - | cut -d' ' -f1" 
) -}}

{{- if eq .chezmoi.os "linux" -}}
{{-
  $gpu = lower ( trim (
    output "sh" "-c" "lspci | grep VGA | cut -d ':' -f3 | awk '{print $1}'"
   )) -}}
{{-   if or (lstat "/.dockerenv") (lstat "/run/.containerenv") -}}
{{-     $isContainer = true -}}
{{-   end -}}
{{-   if $isContainer -}}
{{-     $isDistroBox = ne (env "DISTROBOX_ENTER_PATH") "" -}}
{{-   end -}}
{{-   if $isDistroBox -}}
{{-     $chassis = trim (
           output "distrobox-host-exec" "hostnamectl" "chassis" 
                        ) -}}
{{-     $loginSession = trim (
  output "distrobox-host-exec" "sh" "-c" "loginctl | grep user | awk '{print $1}'" 
  ) -}}
{{-     $loginSessionType = trim ( replace "Type=" "" (
  output "distrobox-host-exec" "loginctl" "show-session" $loginSession "-p" "Type"
                                  )) -}}
{{-
  $osVariant = lower ( trim (
  output "sh" "-c" "distrobox-host-exec sh -c '. /etc/os-release && echo $VARIANT'" 
   )) -}}
{{-
  $ublueImageInfo = (
  output "sh" "-c" "distrobox-host-exec cat /usr/share/ublue-os/image-info.json" 
   ) -}}
{{-     $isUblue = not (empty $ublueImageInfo) -}}
{{-   else if $isContainer -}}
{{-     $chassis = "container" -}}
{{-   else -}}
{{-     $loginSession = output "loginctl" "-o" "json" 
          | fromJson
          | jq (
             printf ".[] | select(.user==\"%s\") | .session" .chezmoi.username) 
          | first -}}
{{-
  $loginSessionType = output "loginctl" "show-session" $loginSession "-p" "Type"
          | replace "Type=" ""
          | trim
   -}}
{{-     $chassis = output "hostnamectl" "chassis" | trim -}}
{{-     $osVariant = output "sh" "-c" ". /etc/os-release && echo $VARIANT" 
          | trim 
          | lower
   -}}
{{-     $ublueImageInfo = cat "/usr/share/ublue-os/image-info.json" -}}
{{-     $isUblue = not (empty $ublueImageInfo) -}}
{{-   end -}}
{{- end -}}

{{- $aquaRoot      := env "AQUA_ROOT_DIR" -}}
{{- $aquaInstalled := ne $aquaRoot "" }}

{{- $srcDir       := printf "%s/src" .chezmoi.homeDir -}}
{{- $srcGitHubDir := printf "%s/github.com/%s" $srcDir $githubUser -}}
{{- $dots         := printf "%s/%s" $srcGitHubDir $dotsStr -}}
{{- /* TODO: get from user input */ -}}
{{- 
  $wallpaper := printf
  "%s/walls/main/wide/foggy-peaks-valley_catppuccin-oled_16_GaussianV1_0_20_512.png"
     $srcGitHubDir
  -}}
{{- $chezmoiSourceDir := printf "%s/home" $dots -}}

sourceDir = "{{ $chezmoiSourceDir }}"
progress = true

{{ if lookPath "delta" -}}
[diff]
  pager = "delta"
  command = "delta"
  args = ["--paging", "never"]
  exclude = ["dirs", "scripts"]

{{ end -}}
[data]
  aqua_installed = {{ $aquaInstalled }}
  aqua_bin_dir = "{{ $aquaRoot }}/bin"
  aqua_root = "{{ $aquaRoot }}"
  chezmoi_home = "{{ $chezmoiSourceDir }}"
  desktop_session = "{{ $desktopSession }}"
  dots = "{{ $dots }}"
  hour_dark = {{ $hourDark }}
  hour_light = {{ $hourLight }}
  login_session = {{ $loginSession }}
  login_session_type = "{{ $loginSessionType }}"
  monospace_font = "{{ $fontMonospace }}"
  wallpaper = "{{ $wallpaper }}"
  [data.host]
    chassis = "{{ $chassis }}"
    is_ublue = {{ $isUblue }}
    os_variant = "{{ $osVariant }}"
    gpu = "{{ $gpu }}"

  [data.me]
    user = "{{ .chezmoi.username }}"
    email = "{{ $email }}"
    name = "{{ $name }}"
    [data.me.gravatar]
      id = "{{ $gravatarID }}"
    [data.me.github]
      username = "{{  $githubUser }}"

